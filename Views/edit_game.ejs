<!-- script for form validation -->


<body>
	<div class="loader">
	  <div class="spinner">
		<img src="/assets/images/loader.gif" alt=""/>
	  </div> 
	</div>
    <!-- Main Body -->
    <div class="page-wrapper">
        
        <%- include('./header'); -%>      
        <%- include('./sidebar'); -%>
        
        <div class="page-wrapper">
            <div class="main-content">
                <!-- Page Title Start -->
                <div class="row">
                    
                </div>
                <!-- Table Start -->
                <div class="row">
                    <!-- Styled Table Card-->
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card table-card">
                            <div class="card-header pb-0">
                                <h4>Edit Game</h4>
                            </div>
                            <div class="card-body">
                                <div class="chart-holder">
                                    <div class="table-responsive">

                                       <div class="addgame">

                                        <form id ="gameform" action="/add-game/update/<%=data._id %>" method="post" style="width: 400px; align-items: right;">
                                          
                                          <p style="color: rgb(6, 109, 54); text-align: center; font-weight: bold;"><%= message %></p>
                                            <div>
                                              <p> Game Name</p> 
                                              
                                              <input type="text" class="form-control" name= "game" value = "<%= data.game_name %>"  >
                                                </div>

                                            <div class="mb-3">
                                              <p>Game Open Time</p>
                                              <input type="time" class="form-control" name ="opentime" value = <%= data.open_time %> >
                                            </div>

                                            <div class="mb-3">
                                                <p>Close Game Time</p>
                                                <input type="time" class="form-control" name = "closetime" value = <%= data.close_time %>>
                                              </div>
                                                                                          
                                            
                                            <button type="submit" class="btn btn-primary">Update</button>
                                            <button type="submit" class="btn btn-warning" >close</button>
                                           
                                          </form> 
                                             </div>
                                           

                                       
                                       
                                    </div>
                                </div>
								
                            </div>
                        </div>
                    </div>
                </div>

				<div class="ad-footer-btm">
					<p>Copyright 2021 Â© SplashDash All Rights Reserved.</p>
				</div>    
			</div>    
		</div>    
	</div>    
   <!-- Preview Setting Box -->
	
    <!-- Preview Setting -->
	
    <!-- Script Start  -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"> </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"> </script>

    <script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/custom.js"></script>

 

    <!-- for jquery validation -->
   
    
      <script>
        $(document).ready(function() {
          $("#gameform").validate({

               rules: {
                   game:"required",
                   opentime: "required",
                   closetime: "required", 
               },
               messages: {
                   game:"Please Enter Name",
                   opentime: "Please select open Game Time",
                   closetime: "Please select close Game Time",
               },
           });
   });
   </script>
</body>


